# MySQL Database Configuration
# Copy this file to .env and update with your actual database credentials

# MySQL server host (default: localhost)
MYSQL_HOST=localhost

# MySQL server port (default: 3306)
MYSQL_PORT=3306

# MySQL username (default: root)
MYSQL_USER=root

# MySQL password (required for most setups)
MYSQL_PASSWORD=your_password_here

# MySQL database name (specify the database you want to connect to)
MYSQL_DATABASE=your_database_name

# Example for Docker Compose setup:
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=myuser
# MYSQL_PASSWORD=mypassword
# MYSQL_DATABASE=mydatabase